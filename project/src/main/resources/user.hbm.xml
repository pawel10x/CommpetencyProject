<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="pl.competencyproject.model.entities.User" table="USERS">

        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>

        <id name="idUser" type="int" column="idUser">
            <generator class="native"/>
        </id>

        <property name="email" column="email" type="string"/>
        <property name="password" column="password" type="string"/>
        <property name="active" column="active" type="boolean"/>
        <property name="confirmed" column="confirmed" type="boolean"/>
        <property name="creationDate" column="creationDate" type="java.sql.Date"/>

    </class>
</hibernate-mapping>
